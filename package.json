{
  "name": "VDON.ElectronCaptureOne.App",
  "version": "2.18.4",
  "description": "ElectronCaptureOne background service",
  "author": "Steve Seguin <steve@seguin.email>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac --universal",
    "build:linux": "electron-builder --linux",
    "build:rpi": "USE_SYSTEM_FPM=true electron-builder --armv7l --linux deb",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steveseguin/electroncapture.git"
  },
  "build": {
    "appId": "capture.electron",
    "productName": "ElectronCaptureOne",
    "files": [
      "**/*",
      "!tmp/*",
      "!output/*",
      "build/Release/*",
      "assets/icons/*.*",
      "assets/icons/mac/*.*",
      "assets/icons/png/*.*",
      "assets/icons/win/*.*"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access to record video.",
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "ElectronCaptureOne-${version}.${ext}",
      "writeUpdateInfo": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "ia32",
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "category": "public.build.automation",
      "icon": "assets/icons/png/256x256.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": "AppImage"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/icons/win/icon.ico",
      "artifactName": "ElectronCaptureOne-${version}.${ext}",
      "differentialPackage": false
    },
    "portable": {
      "artifactName": "ElectronCaptureOne.exe",
      "requestExecutionLevel": "user",
      "unpackDirName": true
    },
    "appx": {
      "applicationId": "ElectronCaptureOne",
      "backgroundColor": "#464646",
      "identityName": "ElectronCaptureOne",
      "publisherDisplayName": "Steve Seguin",
      "artifactName": "ElectronCaptureOne-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "afterSign": "./afterSign.js"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electron-notarize": "git://github.com/electron/notarize.git",
    "rimraf": "^5.0.5",
    "run-script-os-fix": "^1.0.4"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^3.0.1",
    "electron-prompt": "^1.7.0",
    "electron-unhandled": "4.0.1",
    "minimalist": "^1.0.0",
    "minimist": "github:fortiZde/minimist",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
